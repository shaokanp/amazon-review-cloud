$('#review-list').append('<%= j render @reviews %>');
console.log(<%= @reviews.count %>)
if(parseInt(<%= @reviews.count %>) < 1) window.isAllReviewLoaded = true;
$.each($('#review-list').find('p'), function (index, value){
    $(value).html($(value).html().replace(new RegExp(window.currentAspect, "ig"), '<b style="color: #39d;">' + window.currentAspect + '</b>'));
});
